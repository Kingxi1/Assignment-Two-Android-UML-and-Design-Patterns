<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

  <!-- Top banner -->
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:scaleType="centerInside"
      android:src="@drawable/img_wakamole_text" />

  <!-- Leaderboard title -->
  <TextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:text="Leaderboard"
      android:textSize="22sp"
      android:textStyle="bold"
      android:textColor="#9C27B0"
      android:gravity="center" />

  <!-- Content container -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="9"
      android:orientation="vertical"
      android:layout_marginTop="20dp">

    <!-- row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/iv_leaderboard_avatar1"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:src="@drawable/img_grey_mole"
          android:scaleType="centerCrop" />

      <TextView
          android:id="@+id/tv_leaderboard_name1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Name scored:"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:padding="4dp" />

      <TextView
          android:id="@+id/tv_leaderboard_score1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="0"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:gravity="end"
          android:padding="4dp" />
    </LinearLayout>

    <!-- row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/iv_leaderboard_avatar2"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:src="@drawable/img_grey_mole"
          android:scaleType="centerCrop" />

      <TextView
          android:id="@+id/tv_leaderboard_name2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Name scored:"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:padding="4dp" />

      <TextView
          android:id="@+id/tv_leaderboard_score2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="0"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:gravity="end"
          android:padding="4dp" />
    </LinearLayout>

    <!-- row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/iv_leaderboard_avatar3"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:src="@drawable/img_grey_mole"
          android:scaleType="centerCrop" />

      <TextView
          android:id="@+id/tv_leaderboard_name3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Name scored:"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:padding="4dp" />

      <TextView
          android:id="@+id/tv_leaderboard_score3"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="0"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:gravity="end"
          android:padding="4dp" />
    </LinearLayout>

    <!-- row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/iv_leaderboard_avatar4"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:src="@drawable/img_grey_mole"
          android:scaleType="centerCrop" />

      <TextView
          android:id="@+id/tv_leaderboard_name4"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Name scored:"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:padding="4dp" />

      <TextView
          android:id="@+id/tv_leaderboard_score4"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="0"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:gravity="end"
          android:padding="4dp" />
    </LinearLayout>

    <!-- row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

      <ImageView
          android:id="@+id/iv_leaderboard_avatar5"
          android:layout_width="0dp"
          android:layout_height="50dp"
          android:layout_weight="1"
          android:src="@drawable/img_grey_mole"
          android:scaleType="centerCrop" />

      <TextView
          android:id="@+id/tv_leaderboard_name5"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="Name scored:"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:padding="4dp" />

      <TextView
          android:id="@+id/tv_leaderboard_score5"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:text="0"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:gravity="end"
          android:padding="4dp" />
    </LinearLayout>

  </LinearLayout>

</LinearLayout>