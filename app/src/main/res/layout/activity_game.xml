<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!--Top Section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- WHACK-A-MOLE  -->
        <ImageView
            android:id="@+id/iv_wakamole_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingTop="20dp"
            android:src="@drawable/img_wakamole_text"
            android:scaleType="centerInside" />

        <!-- Time + Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="32dp">

            <TextView
                android:id="@+id/tv_timer_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Time: 30"
                android:textAppearance="?android:textAppearanceMedium"
                />

            <TextView
                android:id="@+id/tv_score_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <!--  3Ã—3 Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!-- first line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_without_mole_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Second line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_without_mole_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_06"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />
        </LinearLayout>

        <!-- Third Line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_without_mole_07"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_08"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />

            <ImageView
                android:id="@+id/iv_without_mole_09"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/img_without_mole"
                android:padding="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>